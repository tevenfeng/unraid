<?xml version="1.0"?>
<Container>
  <TemplateURL>https://raw.githubusercontent.com/tevenfeng/unraid/master/baidunetdisk.xml</TemplateURL>
  <Beta>False</Beta>
  <Category>Cloud: Network:Web Tools:</Category>
  <Name>baidunetdisk</Name>
  <Description>
    [b][u][span style='color: #E80000;']应用介绍[/span][/u][/b][br]
    百度网盘官方Linux版，可通过web界面或VNC连接。[br][br]
    [b][u][span style='color: #E80000;']文档介绍[/span][/u][/b][br]
    https://github.com/maxduke/docker-baidunetdisk-with-conf-dir[br][br]
  </Description>
  <Overview>
    Docker image for baidunetdisk running with conf dir
  </Overview>
  <Registry>https://hub.docker.com/r/johngong/baidunetdisk</Registry>
  <Repository>johngong/baidunetdisk:latest</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Network>host</Network>
  <Shell>sh</Shell>
  <Config Name="用户 ID" Target="PUID" Default="" 
    Mode="" Description="运行 baidunetdisk 容器的用户" Type="Variable" 
    Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="用户组 ID" Target="GUID" Default="" 
    Mode="" Description="运行 baidunetdisk 容器的用户组" Type="Variable" 
    Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="web访问端口" Target="5800" Default="" 
    Mode="tcp" Description="web访问端口"  Type="Port" 
    Display="always" Required="true" Mask="false">5800</Config>
  <Config Name="VNC访问端口" Target="5900" Default="" 
    Mode="tcp" Description="VNC访问端口"  Type="Port" 
    Display="always" Required="false" Mask="false">5900</Config>
  <Config Name="AppData 配置路径" Target="/config" Default="" 
    Mode="rw" Description="该目录将映射到容器中的 /config，用于持久化存储 baidunetdisk 配置" Type="Path" 
    Display="always" Required="true" Mask="false">/mnt/user/appdata/baidunetdisk</Config>
  <Config Name="baidunetdisk下载目录" Target="/config/baidunetdiskdownload" Default="" 
    Mode="rw" Description="该目录将映射到容器中的 /config/baidunetdiskdownload" Type="Path" 
    Display="always" Required="true" Mask="false">/mnt/user</Config>
  <Icon>https://gitee.com/fengdingwen/unraid/raw/master/images/baidunetdisk-icon.png</Icon>
  <ExtraParams>--mount type=tmpfs,destination=/tmp</ExtraParams>
  <PostArgs></PostArgs>
  <CPUset></CPUset>
  <DateInstalled></DateInstalled>
  <DonateText></DonateText>
  <DonateLink></DonateLink>
  <DonateImg></DonateImg>
</Container>
